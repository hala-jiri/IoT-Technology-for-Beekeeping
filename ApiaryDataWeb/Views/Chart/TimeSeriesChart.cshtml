@{
    var chartData = ViewBag.ChartData ?? "{}";
}

<div>
   
</div>

<h1>Plot test</h1>
<!-- Debugging: Display raw JSON -->
<pre>@chartData</pre>


<canvas id="timeSeriesChart" width="600" height="400"></canvas>

<!-- Místo pro graf -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/luxon"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon"></script>
<script>



        // Parse the raw JSON data from the server
    const rawData = @Html.Raw(chartData);

    // Transform raw JSON into datasets for Chart.js
    const datasets = rawData.dataSets.map((dataSet, index) => {
        return {
            label: `Dataset ${index + 1}`,
            data: dataSet.map(d => ({
                x: d.time,
                y: d.value
            })),
            fill: false,
            borderColor: `rgba(${75 + index * 50}, 192, 192, 1)`, // Unique color for each dataset
            tension: 0.1
        };
    });



    const config = {
        type: 'line',
        data: {
            datasets: datasets
        },
        options: {
            scales: {
                x: {
                    type: 'time',
                    time: {
                        unit: 'minute'
                    }
                },
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    const ctx = document.getElementById('timeSeriesChart').getContext('2d');
    new Chart(ctx, config);
</script>
