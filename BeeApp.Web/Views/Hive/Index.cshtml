@model List<BeeApp.Shared.ViewModels.HiveViewModel>

<h1>Hives under apiary: @Model.FirstOrDefault()?.ApiaryName</h1>

<p>
    <a asp-action="Create" asp-route-apiaryId="@Model.FirstOrDefault()?.ApiaryId" class="btn btn-success">➕ Add hive</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hive name</th>
            <th>Last measurement</th>
            <th>Weight (kg)</th>
            <th>Temperature (°C)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hive in Model)
        {
            <tr>
                <td>@hive.Name</td>
                <td>@(hive.LastMeasurement?.ToString("g") ?? "–")</td>
                <td>@(hive.LastWeight?.ToString("F1") ?? "–")</td>
                <td>@(hive.LastTemperature?.ToString("F1") ?? "–")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hive.HiveId">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@hive.HiveId" class="text-danger">🗑️ Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>