@model List<BeeApp.Shared.ViewModels.HiveViewModel>

<h1>Hives under apiary: @Model.FirstOrDefault()?.ApiaryName</h1>

<p>
    <a asp-action="Create" asp-route-apiaryId="@Model.FirstOrDefault()?.ApiaryId" class="btn btn-success">➕ Add hive</a>
</p>

@if (ViewBag.Lat != null && ViewBag.Lng != null)
{
    <div class="mb-4">
        <h4>📍 Apiary Location</h4>
        <div id="apiary-map" style="height: 400px; width: 100%;"></div>
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ApiaryImage))
{
    <div class="mb-3">
        <img src="~/uploads/apiaries/@ViewBag.ApiaryImage" class="img-fluid rounded shadow" style="max-width: 500px;" />
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hive name</th>
            <th>Last measurement</th>
            <th>Weight (kg)</th>
            <th>Temperature (°C)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hive in Model)
        {
            <tr>
                <td>@hive.Name</td>
                <td>@(hive.LastMeasurement?.ToString("g") ?? "–")</td>
                <td>@(hive.LastWeight?.ToString("F1") ?? "–")</td>
                <td>@(hive.LastTemperature?.ToString("F1") ?? "–")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@hive.HiveId" class="btn btn-link">🔍 Detail</a>
                    <a asp-action="Edit" asp-route-id="@hive.HiveId">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@hive.HiveId" class="text-danger">🗑️ Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

