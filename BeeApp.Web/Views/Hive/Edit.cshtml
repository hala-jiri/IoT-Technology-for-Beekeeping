@model BeeApp.Shared.DTO.HiveUpdateDto
@{
    var apiaries = ViewBag.Apiaries as List<BeeApp.Shared.Models.Apiary>;
}

<h1>Edit of hive</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="HiveId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ApiaryId">Apiary</label>
        <select asp-for="ApiaryId" class="form-control" asp-items="@(new SelectList(apiaries, "ApiaryId", "Name"))">
            <option value="">-- options --</option>
        </select>
        <span asp-validation-for="ApiaryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-apiaryId="@Model.ApiaryId" class="btn btn-secondary">Back</a>
</form>