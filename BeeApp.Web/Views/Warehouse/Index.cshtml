@model List<BeeApp.Shared.Models.WarehouseItem>

<h2>📦 Warehouse Inventory</h2>

<p><a asp-action="Create" class="btn btn-success">➕ Add item</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Qty</th>
            <th>Status</th>
            <th>Location</th>
            <th>Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Status</td>
                <td>@item.LocationNote</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.WarehouseItemId">✏️ Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>