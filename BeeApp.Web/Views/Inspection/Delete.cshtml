@model BeeApp.Shared.Models.InspectionReport

<h2>❌ Confirm deletion</h2>

<p>Are you sure you want to delete this inspection from <strong>@Model.InspectionDate.ToString("g")</strong>?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.InspectionReportId" method="post">
    <input type="hidden" asp-for="InspectionReportId" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" asp-route-hiveId="@Model.HiveId" class="btn btn-secondary">Cancel</a>
</form>